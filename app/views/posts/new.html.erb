<h1>New Psot</h1>
<%= form_for(@post) do |f|%>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :tag %><br>
    <%= f.text_field :tag %>
  </div>

